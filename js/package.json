{
  "name": "@terra-money/terra.proto",
  "version": "0.1.3",
  "description": "JS and TS types relating to Protocol Buffers used by Terra project",
  "contributors": [
    "Yun Yeo <YunSuk-Yeo@users.noreply.github.com>"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/terra-money/terra.proto"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "confio/",
    "cosmos/",
    "cosmos_proto/",
    "terra/",
    "gogoproto/",
    "google/",
    "ibc/",
    "tendermint/",
    "*.md"
  ],
  "scripts": {
    "format": "prettier --write --loglevel warn \"./src/**/*.ts\"",
    "build": "rm -rf ./build && tsc --module commonjs && ./scripts/prepare.sh",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "long": "^4.0.0",
    "protobufjs": "~6.11.2"
  },
  "devDependencies": {
    "@types/long": "^4.0.1",
    "@types/node": "^15.6.2",
    "prettier": "^2.3.0",
    "ts-proto": "^1.82.5",
    "typescript": "~4.0"
  }
}
